<!--actual contents of dtt window. to be emebedded within dtt_panel-->

<root>
    <windowclass name="dtt_window">
        <frame>utilitybox</frame>
        <margin>
            <top>0</top>
            <left>0</left>
            <bottom>0</bottom>
            <right>0</right>
        </margin>
        <sizelimits>
            <maximum>
                <width>200</width>
                <height>100</height>
            </maximum>
            <minimum>
                <width>200</width>
                <height>100</height>
            </minimum>
        </sizelimits>
        <sheetdata>
            <windowtitlebar_utilitybox name="dttwindowtitle"/>
			<stringcontrol name="dtt_title">
                <default>
                    <text>Dungeon Turn</text>
                </default>
                <anchored>
                    <top anchor="top" offset="0" />
                    <left anchor="center" offset="-50" />
                </anchored>
                <font>windowtitle</font>
                <nodrag/>
                <nodrop/>
                <center/>
                <readonly />
            </stringcontrol>
            <button_checkbox_column name="dtt_checkbox1" >
                <anchored>
                    <to>dtt_title</to>
                    <size>
                        <width>100</width>
                        <height>100</height>
                    </size>
                    <top anchor="bottom" offset="5" />
                    <left anchor="left" offset="0" />
                </anchored>
            </button_checkbox_column>
        </sheetdata>
	</windowclass>
</root>