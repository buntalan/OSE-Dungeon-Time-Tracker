<!--actual contents of dtt window. to be emebedded within dtt_panel-->

<root>
    <windowclass name="dtt_window">
        <frame>utilitybox</frame>
        <margins>
            <control>0,0,0,0</control>
        </margins>
        <sizelimits>
            <maximum>
                <width>175</width>
                <height>120</height>
            </maximum>
            <minimum>
                <width>175</width>
                <height>120</height>
            </minimum>
        </sizelimits>
        <sheetdata>
            <windowtitlebar_utilitybox name="dttwindowtitle"/>
			<stringcontrol name="dtt_title">
                <default>
                    <text>Dungeon Turn</text>
                </default>
                <anchored>
                    <top parent="dttwindowtitle" anchor="top" offset="0" />
                    <left parent="dttwindowtitle" anchor="center" offset="-43" />
                </anchored>
                <font>windowtitle</font>
                <nodrag/>
                <nodrop/>
                <center/>
                <readonly />
            </stringcontrol>
            <genericcontrol name="dtt_spacer">
                <anchored>
                    <top parent="dtt_title" anchor="bottom" offset="0" />
                    <left anchor="left" offset="0" />
                    <size>
                        <width>175</width>
                        <height>20</height>
                    </size>
                </anchored>
            </genericcontrol>
            <button_checkbox name="dtt_checkbox1" >
                <anchored>
                    <to>dtt_spacer</to>
                    <size>
                        <width>20</width>
                        <height>20</height>
                    </size>
                    <top parent="dtt_spacer" anchor="bottom" offset="0" />
                    <left parent="dtt_spacer" anchor="center" offset="-60" />
                </anchored>
                <script file="scripts/checkbox.lua" />
            </button_checkbox>
            <button_checkbox name="dtt_checkbox2" >
                <anchored>
                    <to>dtt_spacer</to>
                    <size>
                        <width>20</width>
                        <height>20</height>
                    </size>
                    <top parent="dtt_spacer" anchor="bottom" offset="0" />
                    <left parent="dtt_spacer" anchor="center" offset="-40" />
                </anchored>
                <script file="scripts/checkbox.lua" />
            </button_checkbox>
            <button_checkbox name="dtt_checkbox3" >
                <anchored>
                    <to>dtt_spacer</to>
                    <size>
                        <width>20</width>
                        <height>20</height>
                    </size>
                    <top parent="dtt_spacer" anchor="bottom" offset="0" />
                    <left parent="dtt_spacer" anchor="center" offset="-20" />
                </anchored>
                <script file="scripts/checkbox.lua" />
            </button_checkbox>
            <button_checkbox name="dtt_checkbox4" >
                <anchored>
                    <to>dtt_spacer</to>
                    <size>
                        <width>20</width>
                        <height>20</height>
                    </size>
                    <top parent="dtt_spacer" anchor="bottom" offset="0" />
                    <left parent="dtt_spacer" anchor="center" offset="0" />
                </anchored>
                <script file="scripts/checkbox.lua" />
            </button_checkbox>
            <button_checkbox name="dtt_checkbox5" >
                <anchored>
                    <to>dtt_spacer</to>
                    <size>
                        <width>20</width>
                        <height>20</height>
                    </size>
                    <top parent="dtt_spacer" anchor="bottom" offset="0" />
                    <left parent="dtt_spacer" anchor="center" offset="20" />
                </anchored>
                <script file="scripts/checkbox.lua" />
            </button_checkbox>
            <button_checkbox name="dtt_checkbox6" >
                <anchored>
                    <to>dtt_spacer</to>
                    <size>
                        <width>20</width>
                        <height>20</height>
                    </size>
                    <top parent="dtt_spacer" anchor="bottom" offset="0" />
                    <left parent="dtt_spacer" anchor="center" offset="40" />
                </anchored>
                <script file="scripts/checkbox.lua" />
            </button_checkbox>
            <button_text name="dtt_reset_button" >
                <anchored>
                    <to>dtt_checkbox3</to>
                    <size>
                        <width>50</width>
                        <height>20</height>
                    </size>
                    <top parent="dtt_checkbox3" anchor="bottom" offset="10" />
                    <left parent="dtt_checkbox3" anchor="center" offset="-15" />
                </anchored>
                <text>Reset</text>
            </button_text>
        </sheetdata>
	</windowclass>
</root>